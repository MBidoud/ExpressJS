<div class="row">
  <div class="col-lg-8 mx-auto">
    <h1 class="mb-4">📧 <%= title %></h1>

    <% if (message) { %>
    <div class="alert alert-success" role="alert"><%= message %></div>
    <% } %>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Nous contacter</h5>
        <p class="card-text">N'hésitez pas à nous envoyer un message!</p>

        <form method="POST" action="/contact">
          <div class="mb-3">
            <label for="name" class="form-label">Nom complet</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>

          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="5"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn btn-primary">
            Envoyer le message
          </button>
        </form>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title">📍 Informations de contact</h5>
        <div class="row">
          <div class="col-md-6">
            <p><strong>📧 Email:</strong> contact@example.com</p>
            <p><strong>📞 Téléphone:</strong> +33 1 23 45 67 89</p>
          </div>
          <div class="col-md-6">
            <p>
              <strong>📍 Adresse:</strong> 123 Rue de l'Example<br />75001
              Paris, France
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
